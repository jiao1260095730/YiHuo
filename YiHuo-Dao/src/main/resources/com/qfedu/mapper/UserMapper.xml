<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.qfedu.mapper.UserMapper">

    <select id="register" parameterType="user" resultType="int">
        select * from user where phone = #{phone} and validate_num = #{validateNum}
    </select>

    <insert id="insertValidateNum" parameterType="user">
        insert into user (phone, validate_num) values (#{phone}, #{validateNum})
    </insert>

</mapper>